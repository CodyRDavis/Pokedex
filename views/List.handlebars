<div class = "pokeDex">
  <div class="box">

    <h2>Pokemon to Find</h2>

    <ul>
      {{#each pokemon}}
        {{#unless pokeCaught}}
        <li>
          <div class ="row">
            <div class = "col-6">{{this.pokeName}}</div>
            <div class = "col-6">Pokedex # {{this.pokeNumber}}</div>
          </div>
          <div class="row">
            <div class="col-12">
              <button class="catch" data-id="{{this.id}}">Catch this Pokemon</button>
            </div>
          </div>
          
        </li>
        {{/unless}}
      {{/each}}
    </ul>

  </div>
  
  <div class="box">
    <h2>Add a Pokemon</h2>
    <form class="create-form">
        <label for="name">Pokemon:</label>
        <input type="text" id="name" name="pokeName">
        <label>Pokedex number: </label>
        <input type="number" id = "number" name ="pokeNumber">
      
      <button type="submit">Add Pokemon</button>
    </form>
  </div>
 
  <div class="box">
    <h2>Caught Pokemon</h2>
    <ul>
        {{#each pokemon}}
          {{#if pokeCaught}}
          <li>
            <div class ="row">
              <div class = "col-6">{{this.pokeName}}</div>
              <div class = "col-6">Pokedex # {{this.pokeNumber}}</div>
            </div>
          </li>
          {{/if}}
        {{/each}}
      </ul>
  </div>
  
</div>